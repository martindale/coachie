extends layouts/default

block content
  .ui.padded.grid
    .two.column.row
      .column
        h1 #{game.name}
        if game.image
          img.ui.fluid.segment(src="/files/#{game.image}")
      .column
        h1 Coaches
        .ui.category.search
          .ui.icon.input
            input.prompt(type="text", placeholder="Search coaches...")
            i.search.icon
          .results
        table.ui.four.column.table
          thead
            tr
              th User
              th Team
              th Games
              th Rating
          tbody
            each relationship in relationships
              tr
                td
                  a(href="/users/#{relationship._user.slug}") #{relationship._user.username}
                td #{relationship._user.team}
                td #{relationship._user.relationships}
                td #{relationship._user.rating}
