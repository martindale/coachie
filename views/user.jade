extends layouts/default

block content
  .ui.padded.grid
    .two.column.row
      .column
        .ui.card
          .image
            if user.image
              img(src="/files/#{user.image}")
            else
              img(src="/img/default.jpg")
          .content
            a.header #{user.username}
            .meta
              if user.coach
                a Coach
              else
                a Player
              if user.team
                a #{user.team}
            .description #{user.bio}
            .ui.huge.star.rating(data-rating="#{user.rating}", data-max-rating="5")
            
      .column
        h1 Games
        .ui.three.column.grid
          each relationship in relationships
            | #{relationship}
            .column
              a.ui.card(href="/games/#{relationship._game.slug}")
                .image
                  img.ui.fluid.segment(src="/files/#{relationship._game.image}")


    if user.coach
      .two.column.row
        .column
          h1 Reviews
        .column
          h1 Availability
